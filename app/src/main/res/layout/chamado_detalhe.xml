<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.chamados.ChamadoDetalheActivity">

    <View
        android:id="@+id/chamado_detalhe_view_chamadoDetalhe"
        android:layout_width="0dp"
        android:layout_height="170sp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006" />

    <TextView
        android:id="@+id/chamado_detalhe_textview_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Titulo do Detalhe"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/chamado_detalhe_view_chamadoDetalhe"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chamado_detalhe_textview_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="ID"
        app:layout_constraintBottom_toBottomOf="@+id/chamado_detalhe_view_chamadoDetalhe"
        app:layout_constraintStart_toStartOf="@+id/chamado_detalhe_view_chamadoDetalhe"
        app:layout_constraintTop_toBottomOf="@+id/chamado_detalhe_textview_titulo"
        app:layout_constraintVertical_bias="0.089" />

    <TextView
        android:id="@+id/chamado_detalhe_textview_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="Descricao"
        app:layout_constraintStart_toStartOf="@+id/chamado_detalhe_view_chamadoDetalhe"
        app:layout_constraintTop_toBottomOf="@+id/chamado_detalhe_textview_id" />

    <TextView
        android:id="@+id/chamado_detalhe_textview_dataAbertura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="data abertura"
        app:layout_constraintStart_toStartOf="@+id/chamado_detalhe_view_chamadoDetalhe"
        app:layout_constraintTop_toBottomOf="@+id/chamado_detalhe_textview_descricao" />

    <TextView
        android:id="@+id/chamado_detalhe_textview_horaAbertura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="hora abertura"
        app:layout_constraintStart_toStartOf="@+id/chamado_detalhe_view_chamadoDetalhe"
        app:layout_constraintTop_toBottomOf="@+id/chamado_detalhe_textview_dataAbertura" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="133dp"
        android:layout_height="119dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/chamado_detalhe_view_chamadoDetalhe"
        app:layout_constraintEnd_toEndOf="@+id/chamado_detalhe_view_chamadoDetalhe"
        app:layout_constraintTop_toTopOf="@+id/chamado_detalhe_view_chamadoDetalhe"
         />

    <TextView
        android:id="@+id/chamado_detalhe_textview_respostaTecnico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="Resposta do tecnico"
        app:layout_constraintStart_toStartOf="@+id/chamado_detalhe_view_chamadoDetalhe"
        app:layout_constraintTop_toBottomOf="@+id/chamado_detalhe_textview_horaAbertura" />

</androidx.constraintlayout.widget.ConstraintLayout>