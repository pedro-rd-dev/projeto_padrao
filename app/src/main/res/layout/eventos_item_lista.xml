<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/eventos_item_view"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/round_card_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/eventos_item_favoritado"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/eventos_item_view"
        app:layout_constraintEnd_toEndOf="@+id/eventos_item_view"
        app:layout_constraintTop_toTopOf="@+id/eventos_item_view"
        app:layout_constraintVertical_bias="0.505"
        app:srcCompat="@drawable/ic_baseline_stars_amarela" />

    <ImageView
        android:id="@+id/eventos_item_favorito"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/eventos_item_view"
        app:layout_constraintEnd_toEndOf="@+id/eventos_item_view"
        app:layout_constraintTop_toTopOf="@+id/eventos_item_view"
        app:layout_constraintVertical_bias="0.505"
        app:srcCompat="@drawable/ic_baseline_stars_24" />

    <TextView
        android:id="@+id/eventos_lista_textview_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:text="Nome do evento"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/eventos_item_view"
        app:layout_constraintTop_toTopOf="@+id/eventos_item_view" />

    <TextView
        android:id="@+id/eventos_lista_textview_hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/eventos_item_view"
        app:layout_constraintStart_toStartOf="@+id/eventos_lista_textview_data"
        app:layout_constraintTop_toBottomOf="@+id/eventos_lista_textview_data"
        app:layout_constraintVertical_bias="0.027" />

    <TextView
        android:id="@+id/eventos_lista_textview_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="68dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/eventos_item_view"
        app:layout_constraintEnd_toStartOf="@+id/eventos_item_favorito"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/eventos_lista_textview_nome"
        app:layout_constraintTop_toBottomOf="@+id/eventos_lista_textview_nome"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/eventos_lista_textview_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/eventos_lista_textview_hora"
        app:layout_constraintTop_toBottomOf="@+id/eventos_lista_textview_hora" />

    <TextView
        android:id="@+id/eventos_lista_textview_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/eventos_lista_textview_local"
        app:layout_constraintTop_toBottomOf="@+id/eventos_lista_textview_local" />

</androidx.constraintlayout.widget.ConstraintLayout>