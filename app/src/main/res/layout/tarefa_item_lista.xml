<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/tarefas_item_view"
        android:layout_width="0dp"
        android:layout_height="60sp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/round_item_list_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tarefas_lista_textview_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Nome da tarefa"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tarefas_item_view"
        app:layout_constraintStart_toStartOf="@+id/tarefas_item_view"
        app:layout_constraintTop_toTopOf="@+id/tarefas_item_view" />

    <ImageView
        android:id="@+id/tarefas_item_delete"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tarefas_item_view"
        app:layout_constraintEnd_toEndOf="@+id/tarefas_item_view"
        app:layout_constraintTop_toTopOf="@+id/tarefas_item_view"
        app:srcCompat="@drawable/ic_baseline_delete_24" />

    <ProgressBar
        android:id="@+id/tarefas_item_lista_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/tarefas_item_view"
        app:layout_constraintEnd_toEndOf="@+id/tarefas_item_view"
        app:layout_constraintTop_toTopOf="@+id/tarefas_item_view" />
</androidx.constraintlayout.widget.ConstraintLayout>